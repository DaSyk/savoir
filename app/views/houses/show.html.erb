<%- model_class = House -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @house.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:description) %></dt>
      <dd><pre class="prettyprint"><%= @house.description %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:region_id) %></dt>
      <dd><pre class="prettyprint"><%= @house.region_id %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:size) %></dt>
      <dd><pre class="prettyprint"><%= @house.size %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:n_people) %></dt>
      <dd><pre class="prettyprint"><%= @house.n_people %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:add_n_people) %></dt>
      <dd><pre class="prettyprint"><%= @house.add_n_people %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:activated) %></dt>
      <dd><pre class="prettyprint"><%= @house.activated %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              houses_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_house_path(@house), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              house_path(@house),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>