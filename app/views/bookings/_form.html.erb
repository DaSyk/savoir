<%= simple_nested_form_for [@house,@booking], :html => { :class => 'form-vertical' } do |f| %>

    <% if @bookings.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@bookings.errors.count, "error") %> prohibited this widget from being saved:</h2>

        <ul>
        <% @bookings.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>



    <div class='row'>
      <div class='col-md-6'>
        <%= f.input :gender, :as => :radio_buttons, collection: ['Frau', 'Herr'], label: "Anrede" %>
        <div class="row">
          <div class="col-md-6"><%= f.input :lastname, label: "Nachname", required: true %></div>
          <div class="col-md-6"><%= f.input :firstname, label: "Vorname", required: true %></div>
        </div>
        <div class="row">
          <div class="col-md-6"><%= f.input :email, required: true %></div>
          <div class="col-md-6"><%= f.input :phone, label: "Telefon" %></div>
        </div>

        <div class="form-group">
          <label class="string optional control-label" for="booking_lastname">Zeitraum</label>
          <%= text_field_tag 'date', nil, class: 'form-control daterange' %>
          <%= f.input :start_date, as: :hidden %>
          <%= f.input :end_date, as: :hidden %>

        </div>

        <div class='row'>
            <div class='col-md-12'>
              <%= f.input :message, label: "Mitteilung" %>
            </div>
        </div>

        <hr>

        <div class="center-block">
          <div class="form-group text-center">
            <%= f.button :submit, "Abschicken", :class => 'btn-primary' %> oder
            <%= link_to "Abbrechen", house_bookings_path(@house), :class => 'btn btn-default' %>
          </div>
        </div>
      </div>
      <div class="col-md-6">

      </div>
    </div>
<% end %>


